def count_upper_and_lower(s):
    upper_count = 0
    lower_count = 0
    for char in s:
        if char.isupper():
            upper_count += 1
        elif char.islower():
            lower_count += 1
    return upper_count, lower_count

# Example usage
input_string = "Hello, World!"
upper_count, lower_count = count_upper_and_lower(input_string)
print(f"Uppercase letters: {upper_count}")  # Output: Uppercase letters: 2
print(f"Lowercase letters: {lower_count}")  # Output: Lowercase letters: 8
