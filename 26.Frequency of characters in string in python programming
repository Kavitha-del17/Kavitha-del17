def count_character_frequency(s):
    frequency = {}
    
    for char in s:
        if char in frequency:
            frequency[char] += 1
        else:
            frequency[char] = 1
    
    return frequency

# Example usage
input_string = "Hello, World!"
frequency = count_character_frequency(input_string)
print("Character frequencies:")
for char, count in frequency.items():
    print(f"{char}: {count}")
    
